@model Airplanes.Controllers.MainController.UsersViewController

@{
    ViewData["Title"] = "Choice Route";
}

<h2>Choice Route</h2>

<h4>Select information</h4>
<hr />
<h5>@ViewBag.Match</h5>
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChoiseRoute">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="selectInformation.FromAirport"  class="control-label"></label>
                <select asp-for="selectInformation.FromAirport" class="custom-select browser-default" asp-items="ViewBag.FromAirport"></select>
                
            </div>

            <div class="form-group">
                <label asp-for="selectInformation.ToAirport" class="control-label"></label>
                <select asp-for="selectInformation.ToAirport" class="custom-select browser-default" asp-items="ViewBag.ToAirport">
                    <option value="0">Every Where</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="selectInformation.Date" class="control-label"></label>
                <input asp-for="selectInformation.Date" class="form-control" />
                <span asp-validation-for="selectInformation.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    @*<a asp-action="Index">Back to List</a>*@
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
