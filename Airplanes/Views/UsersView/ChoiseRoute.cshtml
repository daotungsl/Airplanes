@model Airplanes.Controllers.MainController.UsersViewController

@{
    ViewData["Title"] = "Choice Route";
}

<div class="text-danger" role="alert">
    @ViewBag.Match
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header blue lighten-4">
                Lựa chọn điểm khởi hành
            </div>
            <div class="card-body">
                <form asp-action="ChoiseRoute">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label">Điểm khởi hành: </label>
                        <select asp-for="selectInformation.FromAirport" class="custom-select browser-default" asp-items="ViewBag.FromAirport"></select>

                    </div>

                    <div class="form-group">
                        <label class="control-label">Điểm đến: </label>
                        <select asp-for="selectInformation.ToAirport" class="custom-select browser-default" asp-items="ViewBag.ToAirport">
                            <option value="0">...</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label asp-for="selectInformation.Date" class="control-label"></label>
                        <input asp-for="selectInformation.Date" class="form-control" />
                        <span asp-validation-for="selectInformation.Date" class="text-danger mt-1"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary btn-block" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

