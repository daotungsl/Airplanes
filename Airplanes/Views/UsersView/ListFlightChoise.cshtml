@model IEnumerable<Airplanes.Models.DbFlight>

@{
    ViewData["Title"] = "Index";
}

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<label>@ViewBag.NotFound</label>
<table class="table table-striped">
    <thead class="blue-gradient text-white">
    <tr>
        <th class="font-weight-bold">
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th class="font-weight-bold">
            @Html.DisplayNameFor(model => model.RollNumber)
        </th>
        <th class="font-weight-bold">
            @Html.DisplayNameFor(model => model.FlightTime)
        </th>
        <th class="font-weight-bold">
            @Html.DisplayNameFor(model => model.TimeOfTransit)
        </th>
        <th class="font-weight-bold">
            @Html.DisplayNameFor(model => model.FlightDuration)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.DbPlane.PlaneName)
        </th>*@
        <th class="font-weight-bold">
            @Html.DisplayNameFor(model => model.DbRoute.FromAirport)
        </th>
        <th class="font-weight-bold">
            @Html.DisplayNameFor(model => model.DbRoute.ToAirport)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.CreatedAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpdatedAt)
        </th>*@
        <th class="font-weight-bold">
            @Html.DisplayNameFor(model => model.Status)
        </th>

        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr  class="px-auto py-auto">
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RollNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FlightTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeOfTransit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FlightDuration)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.DbPlane.PlaneName)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.DbRoute.FromAirport)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DbRoute.ToAirport)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>*@
            <td class="green-text">
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td class="px-0">
                @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |*@
                <a class="btn btn-sm btn-primary btn-rounded my-0 waves-effect z-depth-0" asp-action="DetailsFlight" asp-route-id="@item.Id">Details</a> @*|*@
                @*<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
            </td>
        </tr>
        
    }
    </tbody>
</table>

<label>@ViewBag.Data</label>