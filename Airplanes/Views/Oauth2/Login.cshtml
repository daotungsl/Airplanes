@model Airplanes.Models.Login.LoginInformation

@{
    ViewData["Title"] = "Login";
}

<span class="text-danger">@ViewBag.Error</span>
<div class="card mt-3">
    <div class="card-header bg-primary">
        <h4 class="text-center text-white font-weight-bold">ĐĂNG NHẬP</h4>
    </div>
    <div class="card-body p-3">
        <form asp-action="Authentication">
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4" >
                    <input type="submit" value="Login" class="btn btn-primary btn-sm btn-block ml-0" />
                </div>

                <div class="col-4" >
                    <input type="reset" value="Reset" class="btn btn-danger btn-sm btn-block ml-2" />
                </div>

                <div class="col-4" >
                    <a href="/DbUsers/create" class="btn btn-warning btn-sm btn-block ml-2 pt-3" style="height: 100%;">
                        Đăng ký mới
                    </a>
                </div>

            </div>
        </form>
    </div>
</div>

    
